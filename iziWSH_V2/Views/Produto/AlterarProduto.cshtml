@using iziWSH_V2.Models
@model iziWSH_V2.Models.Produto


@{
    ViewBag.Title = "AlterarProduto";
}

    @using (Html.BeginForm("AlterarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>Alterar Produto</legend>
            @Html.HiddenFor(model => model.ProdutoId)

            <div id="Nome" class="form-group">
                @Html.Label("Nome",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Nome,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Nome do produto"
                        })
                </div>
            </div>

            <div id="Descricao" class="form-group">
                @Html.Label("Descrição",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Descricao,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Descrição do produto"
                        })
                </div>
            </div>

            <div id="Preco" class="form-group">
                @Html.Label("Preço",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Preco,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Preço do produto"
                        })
                </div>
            </div>

            <div id="Preco" class="form-group">
                @Html.Label("Preço",
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.ProdutoUtilizado,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Produto utilizado na lavagem"
                        })
                </div>
            </div>

            <div id="Imagem" class="form-group">
                @Html.LabelFor(model => model.Imagem,
                    new { @class = "control-label col-sm-3" })
                <div class="col-sm-10">
                    <input class="custom-file-label" type="file" name="fupImagem" />
                </div>
            </div>

            <br />
            <br /> 

            <br />
            <br />
            <br />
            <div id="Botao" class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Salvar"
                           class="btn btn-outline-primary" />
                </div>
            </div>
        </fieldset>
    }
