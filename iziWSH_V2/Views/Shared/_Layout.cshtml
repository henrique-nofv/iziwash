        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="localhost:61799">iziWSH</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Inicio", "Index", "Home", null,
                 new { @class = "nav-link" })
                    </li>
                    @if (Request.Cookies["Email"].Value != "")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Solicitar Lavagem", "ProdutosVenda", "Home", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Pedidos", "MeusServicos", "Cliente", null, new { @class = "nav-link" })
                        </li>

                    }

                    @if (Request.Cookies["Nivel"].Value == "3" && Request.Cookies["Email"].Value != "")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Realizar Servico", "RealizarServico", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Serviços em Aberto", "MeusServicosAFazer", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Minha Carteira", "Saldo", "Cliente", null, new { @class = "nav-link" })
                        </li>

                    }

                    @if (Request.Cookies["Nivel"].Value == "99")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Produtos Cadastrados", "Index", "Produto", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Clientes Cadastrados", "ListarSolicitante", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Aceitar Colaboradores", "AprovarColaboradores", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Realizar Servico", "RealizarServico", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Serviços em Aberto", "MeusServicosAFazer", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Aprovar Pagamentos", "AprovarPagamento", "Cliente", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Minha Carteira", "Saldo", "Cliente", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    @if (Request.Cookies["Email"].Value == "")
                    {
                        @Html.ActionLink("Login", "Login", "Cliente", null, new { @class = "btn btn-outline-light my-2 my-sm-0" })
                    }
                    else
                    {
                        @Html.ActionLink("Meu Carrinho", "CarrinhoCompras", "Home", null, new { @class = "btn btn-outline-warning my-2 my-sm-0" })
                        @Html.ActionLink("Logout", "Logout", "Cliente", null, new { @class = "btn btn-outline-light my-2 my-sm-0" })
                    }
                </form>
            </div>
